pipeline {
    agent any
    tools {
        maven 'MAVEN386'
    }
    stages {
        stage('App pull') {
            steps {
                dir('jenkins-docker-maven/scripts'){
                    sh 'pull-app.sh'
                }
            }
        }
        stage('Test') {
            steps {
                dir('jenkins-docker-maven/scripts'){
                    sh '''
                        maven.sh mvn clean
                        maven.sh mvn test
                        '''
                }
            }
        }
        stage('App build') {
            steps {
                sh 'jenkins-docker-maven/scripts/maven.sh mvn -B -DskipTests clean package'
            }
        }
        stage('Image Build'){
               steps {
                sh 'jenkins-docker-maven/scripts/build-image.sh'
            }
        }
        stage('Image Push'){
               steps {
                sh 'jenkins-docker-maven/scripts/push.sh $BUILD_NUMBER'
            }
        }
    }
}
